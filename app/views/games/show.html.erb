<div>
    <%= link_to "back", games_path() %> - 
    <%= primary "Edit Game", edit_game_path(@game)  %>
</div>
<h1><%= @game.title %></h1> 

<p><b>Description</b> <%= h(@game.description).gsub(/\n/, '<br>') %></p>
<p><b>Categories</b>
    <% @game.categories.each do |c| %>
        <%= link_to c.name, games_path(:category => c)%>
    <% end %>
</p>


<!-- Comments -->
<h3>Comments</h3>
<% @game.comments.each do |c| %>
    <p><%= c.body %></p>
<% end %>

<h4>Add a comment</h4>
<% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>

<% form_for ([@game, @comment]) do |f| %>
  <%= f.error_messages %>
  <%= f.text_area :body %>
  <p><%= f.submit "Create" %></p>
<% end %>


