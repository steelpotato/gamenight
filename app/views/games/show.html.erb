<div>
    <%= link_to "back", games_path() %> - 
    <%= primary "Edit Game", edit_game_path(@game)  %>
</div>

<h1><%= h(@game.title) %></h1> 
<p><b>Description</b> <%= description(@game) %></p>
<p>Players: <%= players(@game) %></p>

<p>Categories: <%= render :partial => 'category', :collection => @game.categories %></p>

<h3>Comments</h3>
<div id='comments'><%= render :partial => 'comment', :collection => @game.comments %></div>

<h4>Add a comment</h4>
<div id='results'></div>
<% remote_form_for [@game, @comment] do |f| %>
  <%= f.error_messages %>
  <%= f.text_area :body %>
  <p><%= f.submit "Create" %></p>
<% end %>


